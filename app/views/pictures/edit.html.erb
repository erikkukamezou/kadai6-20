<% if @picture.errors.any? %>
  <div id="error_explanation">
    <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @picture, local: true) do |form| %>
  <div class="picture_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="picture_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="field">
  <%= form.label :image %>
  <%= form.file_field :image %>
  </div>
  <%= form.submit %>
<% end %>
<p>リンク先</p>
<%= link_to '一覧画面に戻る', pictures_path %>
<%= link_to 'お気に入り一覧', bookmark_users_path %>
<%= link_to '新しく投稿する', new_picture_path %>
