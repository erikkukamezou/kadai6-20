<h1 class ="show">詳細画面</h1>
<p class ="show">タイトル: <%= @picture.title %></p>
<p class ="show">内容: <%= @picture.content %></p>
<p id="notice"><%= notice %></p>
<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image.url %>
</p>
<% unless @picture.user_id == current_user.id %>
  <% if bookmark.present? %>
    <%= link_to 'お気に入り解除する', bookmark_path(id: @bookmark.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', bookmarks_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<%= link_to '一覧画面に戻る', pictures_path %>
