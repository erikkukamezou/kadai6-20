<h1>ユーザー情報の更新</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.label :プロフィール %>
  <%= f.file_field :image %>
  <%= f.submit "Create my account" %>
<% end %>
<p>リンク先</p>
<%= link_to '一覧画面に戻る', pictures_path %>
<%= link_to 'お気に入り一覧', bookmark_users_path %>
<%= link_to '新しく投稿する', new_picture_path %>
